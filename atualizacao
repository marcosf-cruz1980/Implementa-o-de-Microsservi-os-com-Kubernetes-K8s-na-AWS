apiVersion: apps/v1
kind: Deployment
metadata:
  name: <nome-do-microsserviço>
spec:
  replicas: 3
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 1
      maxSurge: 1
  template:
    metadata:
      labels:
        app: <nome-do-microsserviço>
    spec:
      containers:
      - name: <nome-do-microsserviço>
        image: <aws-account-id>.dkr.ecr.<regiao>.amazonaws.com/<nome-do-microsserviço>:latest
        ports:
        - containerPort: 8080
